<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="IOKode.OpinionatedFramework.Tests.NHibernate.Postgres.Config.Entities" assembly="IOKode.OpinionatedFramework.Tests.NHibernate.Postgres">

    <class name="User" table="Users" lazy="false">

        <!-- A 32 hex character is our surrogate key. It's automatically
            generated by NHibernate with the UUID pattern. -->
        <id name="id" access="field">
            <column name="id" sql-type="char(32)" not-null="true"/>
            <generator class="uuid.hex" />
        </id>
        
        <property name="Username" access="backfield">
            <column name="name" length="16" not-null="true" />
        </property>
        <property name="EmailAddress" access="backfield">
            <column name="email" length="255" not-null="true" />
        </property>
        <property name="IsActive" access="backfield">
            <column name="is_active" not-null="true" />
        </property>
    </class>

</hibernate-mapping>